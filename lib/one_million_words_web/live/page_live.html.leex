<section class="phx-hero">
  <h1><%= gettext "Welcome to %{name}!", name: "Phoenix" %></h1>
  <p>Peace of mind from prototype to production</p>

  <form phx-submit="count_words">
    <input type="text" name="url" value="<%= @url %>" placeholder="RSS url" autocomplete="off" />
    <button type="submit" <%= if @disabled, do: "disabled" %>>Count Words!</button>
  </form>
</section>

<div><%= @count %></div>
